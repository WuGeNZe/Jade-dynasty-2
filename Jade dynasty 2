    <script>
        // Инициализация Telegram WebApp
        const tg = window.Telegram.WebApp;
        tg.expand(); // Развернуть приложение на весь экран
        
        // Получаем данные пользователя
        const user = tg.initDataUnsafe.user;
        if (user) {
            console.log("Пользователь:", user);
        }
        
        // Обновляем счетчик пользователей (пример)
        document.getElementById('userCount').textContent = Math.floor(Math.random() * 10000);
        
        // Обработчик кнопки регистрации
        document.getElementById('registerBtn').addEventListener('click', () => {
            tg.showPopup({
                title: 'Регистрация',
                message: 'Вы уверены, что хотите зарегистрироваться?',
                buttons: [
                    {id: 'yes', type: 'ok', text: 'Да'},
                    {id: 'no', type: 'cancel', text: 'Нет'}
                ]
            }, (buttonId) => {
                if (buttonId === 'yes') {
                    tg.showAlert('Спасибо за регистрацию!');
                    // Здесь можно отправить данные на сервер
                }
            });
        });
        
        // Можно отправлять данные обратно в Telegram
        function sendDataToBot() {
            tg.sendData(JSON.stringify({action: 'register'}));
            tg.close();
        }
    </script>
